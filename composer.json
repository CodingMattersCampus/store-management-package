{
    "name": "codingmatters/store-management-package",
    "description": "Artisan Package for Store or Branch Office Management",
    "license": "MIT",
    "type": "laravel-package",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "codingmattersio@gmail.com"
        }
    ],
    "require": {
        "php": "~7.2.4",
        "codingmatters/employee-management-package": "^1.0 || ~0.1 || dev-develop",
        "nesbot/carbon": "^1.27",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.7",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^3.6",
        "phpunit/phpunit": "^7.1",
        "sebastian/phpcpd": "^4.0",
        "zendframework/zend-coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CodingMatters\\StoreManagement\\": "source/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodingMattersTest\\StoreManagement\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.0-dev",
            "dev-master": "1.0.0-dev"
        },
        "laravel": {
            "providers": [
                "CodingMatters\\StoreManagement\\StoreManagementServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "scripts": {        
        "check": [
            "@cs-check",
            "@cpd",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "cpd": "phpcpd --exclude=/vendor --fuzzy source",
        "test": "phpunit --verbose --colors=always"     
    }
}
